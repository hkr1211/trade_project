{
  "builds": [
    {
      "src": "trade_project/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "run_migrate.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [
    {
      "src": "^/run-migrate$",
      "dest": "/run_migrate.py"
    },
    {
      "src": "/static/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "trade_project/wsgi.py"
    }
  ],
  "buildCommand": "bash build.sh",
  "installCommand": "pip install -r requirements.txt"
}
